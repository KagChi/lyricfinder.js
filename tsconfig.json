{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "declarationMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}